# Atharva Agent environment variables

# Google Gemini (PRIMARY) - Using Gemini as main AI backend
USE_GEMINI=true
USE_ATHARVA=true
GOOGLE_API_KEY=your_google_api_key_here
ATHARVA_API_KEY=your_google_api_key_here
ATHARVA_MODEL=gemini-2.0-flash
ATHARVA_ENDPOINT=https://generativelanguage.googleapis.com/v1beta/models/gemini-2.0-flash:generateContent

# Local Ollama (DISABLED) - Not using Ollama
USE_OLLAMA=false
API_ENDPOINT_URL=http://127.0.0.1:11434/v1/chat/completions
MODEL_NAME=llama3:8b

# Email configuration (optional)
EMAIL_FROM=browser.agent@example.com
EMAIL_USERNAME=
EMAIL_PASSWORD=

# Other optional settings
# MODEL_NAME can be overridden to a different local model (e.g. llama3:8b)
# API_ENDPOINT_URL can be pointed to a remote provider if USE_OLLAMA=false